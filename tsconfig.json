{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "outDir": "out",
        "rootDir": ".",
        "sourceMap": true,
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "newLine": "LF"
    },
    "include": [
        "src",
        "tests"
    ],
    "exclude": [
        "node_modules",
        ".vscode-test"
    ]
}
